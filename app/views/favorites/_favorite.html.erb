
<% if user_signed_in? %>
  <% unless @question.user_id == current_user.id %>
    <% if current_user.favorites.find_by(question_id: @question.id) %>
      <%= link_to 'クリップ解除', favorite_path(@question.id, current_user.favorites.find_by(question_id: @question.id)), method: :delete, remote: true %>
      <%= @question.favorites.count %>
    <% else %>
      <%= link_to 'クリップ', favorites_path(question_id: @question.id), method: :post, remote: true %>
      <%= @question.favorites.count %>
    <% end %>
  <% end %>
<% end %>