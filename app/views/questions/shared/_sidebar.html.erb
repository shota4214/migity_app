<div class="col-xs-4 col-lg-4">
  <%# ---------------がんの種類で調べる------------------- %>
  <div class="card">
    <h5 class="card-header text-center">がんの種類で調べる</h5>
    <div class="card-body">
      <p class="card-text">
        <% @question_diseases_ranks.each.with_index(1) do |disease, i| %>
          <%= link_to by_disease_questions_path(disease.id) do %>
            <span class="bottom-mgr-5 btn btn-outline-secondary btn-sm disease_index-sidemenu-text">
              <%= "#{disease.name}" %><%= "(#{disease.questions.count})" %>
            </span>
          <% end %>
          <% break if i == 5 %>
        <% end %>
      </p>
    </div>
    <div class="card-body text-right">
      <a href="#" class="primary">がんの知見一覧を見る＞</a>
    </div>
  </div>
  <br>
  <%# ---------------薬の種類で調べる------------------- %>
  <div class="card">
    <h5 class="card-header text-center">薬の種類で調べる</h5>
    <div class="card-body">
      <p class="card-text">
        <% @question_drugs_ranks.each.with_index(1) do |drug, i| %>
          <%= link_to by_drug_questions_path(drug.id) do %>
            <span class="bottom-mgr-5 btn btn-outline-secondary btn-sm disease_index-sidemenu-text">
              <%= "#{drug.name}" %><%= "(#{drug.questions.count})" %>
            </span>
          <% end %>
          <% break if i == 5 %>
        <% end %>
      </p>
    </div>
    <div class="card-body text-right">
      <a href="#" class="primary">薬の知見一覧を見る＞</a>
    </div>
  </div>
  <br>
  <%# ---------------支持療法の種類で調べる------------------- %>
  <div class="card">
    <h5 class="card-header text-center">支持療法の種類で調べる</h5>
    <div class="card-body">
      <p class="card-text">
        <% @question_side_effects_ranks.each.with_index(1) do |side_effect, i| %>
          <%= link_to by_side_effect_questions_path(side_effect.id) do %>
            <span class="bottom-mgr-5 btn btn-outline-secondary btn-sm disease_index-sidemenu-text">
              <%= "#{side_effect.name}" %><%= "(#{side_effect.questions.count})" %>
            </span>
          <% end %>
          <% break if i == 5 %>
        <% end %>
      </p>
    </div>
    <div class="card-body text-right">
      <a href="#" class="primary">支持療法の知見一覧を見る＞</a>
    </div>
  </div>
  <br>
  <%# ---------------専門薬剤師一覧------------------- %>
  <div class="card">
    <h5 class="card-header text-center">がん専門薬剤師</h5>
    <ul class="list-group list-group-flush">
      <% @sidebar_profession_users.each.with_index(1) do |user, i| %>
        <li class="list-group-item">
        <%= link_to specialty_pharmacist_show_user_path(user) do %>
          <div class="row">
            <div class="col">
              <% if user.first.image? %>
                <%= image_tag user.first.image.url, class: "rounded-circle", size: "40x40" %>
              <% else %>
                <%= image_tag asset_path('no_image.png'), class: "rounded-circle", size: "40x40" %>
              <% end %>
              <span><%= user.first.name%>先生</span>
              <p class="bottom-mgr-5">
                <span><%= user.first.pharmacy %></span>
                <span><%= embedded_svg("map.svg") %><%= user.first.prefectures %></span>
              </p>
            </div>
            <div class="col-4 d-flex align-items-center justify-content-center">
              <p class="bottom-mgr-5"><%= user.second %>回答</p>
            </div>
          </div>
        <% end %>
        </li>
        <% break if i == 3 %>
      <% end %>
    </ul>
    <div class="card-body text-right">
      <%= link_to "がん専門薬剤師一覧ページ ＞", users_path %>
    </div>
  </div>
  <br>
  <%= link_to "質問する", new_question_path, class: "btn btn-outline-primary btn-block btn-lg" %>
  <br>
  <%= link_to "はじめての方へ", root_path, class: "btn btn-outline-secondary btn-block btn-lg" %>
</div>
