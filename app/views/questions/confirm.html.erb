<% if params[:draft] %>
  <p>以下の内容で、下書き保存します</p>
<% else %>
  <p>以下の内容で、Q&Aを投稿します</p>
<% end %>
<br>
<%= form_with(model: @question, local: true, url: questions_path ) do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= @question.title %>
    <%= f.hidden_field :title %>
  </div>

  <div class="field">
    <%= f.label :label %>
    <% @question.labels.each do |label| %>
      <%= label.name%>
      <%= f.hidden_field :label_ids, multiple: true, value: label.id %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= @question.content %>
    <%= f.hidden_field :content %>
  </div>

  <div class="field">
    <% if params[:draft] %>
      <%= f.submit "下書き保存", name: "draft" %>
    <% else %>
      <%= f.submit "投稿する" %>
    <% end %>
    <%= f.submit "戻る", name: "back" %>
  </div>
<% end %>