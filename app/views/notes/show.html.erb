<p class="p-3"><%= link_to "学習ノート一覧に戻る", notes_path %></p>

<div class="row">
    <div class="container col-3 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">選択されているカテゴリー</h5>
          <div class="card-text">
            <% @note.categories.each do |category| %>
              <p>
                <%= category.name %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  <div class="container col-8">
    <div class="row d-flex justify-content-center">
      <div class="col-12">
        <div class="card mb-3">
          <div class="card-body">
            <p class="card-title">
              <%= link_to @note.title, edit_note_path(@note.id) %>
            </p>
            <p class="card-text">
              <%= link_to @note.content, edit_note_path(@note.id) %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
