<table>
  <tbody>
    <% comments.each do |comment| %>
      <% if comment.id.present? %>
        <tr>
          <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
          <td><%= comment.user.name %>：
          <td><%= comment.content %>
          <% if comment.user == current_user %>
            <td><%= link_to "編集", edit_question_comment_path(question.id, comment.id), remote: true %></td>
            <td><%= link_to "削除", question_comment_path(comment.question_id, comment.id), method: :delete, remote: true, data: { confirm: "コメントを削除しても良いですか？" } %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>